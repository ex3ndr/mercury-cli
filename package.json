{
  "name": "mercury-cli",
  "version": "0.1.0",
  "description": "CLI for Mercury Banking API",
  "repository": {
    "type": "git",
    "url": "https://github.com/ex3ndr/mercury-cli.git"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "mercury": "./dist/main.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "mkdir -p dist && bun build ./sources/main.ts --outfile ./dist/main.js",
    "build:binary": "bun build ./sources/main.ts --compile --outfile ./dist/mercury",
    "dev": "bun ./sources/main.ts",
    "typecheck": "tsc --noEmit",
    "test": "TMPDIR=./.tmp vitest run",
    "test:integration": "TMPDIR=./.tmp vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "bun-types": "^1.3.8",
    "dotenv": "^17.3.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
