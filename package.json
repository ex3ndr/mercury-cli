{
  "name": "mercury-cli",
  "version": "0.1.0",
  "description": "CLI for Mercury Banking API",
  "repository": {
    "type": "git",
    "url": "https://github.com/ex3ndr/mercury-cli.git"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "mercury": "./dist/main.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "mkdir -p dist && esbuild sources/main.ts --bundle --platform=node --format=esm --outfile=dist/main.js --packages=external",
    "dev": "node ./dist/main.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
