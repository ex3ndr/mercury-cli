{
  "name": "mercury-cli",
  "version": "0.1.0",
  "description": "CLI for Mercury Banking API",
  "repository": {
    "type": "git",
    "url": "https://github.com/ex3ndr/mercury-cli.git"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "mercury": "./dist/main.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./sources/main.ts --outdir ./dist --target node",
    "build:binary": "bun build ./sources/main.ts --compile --outfile ./dist/mercury",
    "dev": "bun ./sources/main.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "bun-types": "^1.3.8",
    "typescript": "^5.7.3"
  }
}